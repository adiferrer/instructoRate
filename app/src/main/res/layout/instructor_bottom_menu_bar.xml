<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/menuBackgroundColor"
    android:visibility="visible"

    >

        <!-- List Icon -->
        <ImageButton
            android:id="@+id/instructor_list_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="16dp"
            android:src="@drawable/ic_list" />

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/instructor_dashboard_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#008AB07F"
            android:padding="16dp"
            android:src="@drawable/ic_home" />

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/instructor_settings_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:padding="16dp"
            android:src="@drawable/ic_gears" />

</LinearLayout>